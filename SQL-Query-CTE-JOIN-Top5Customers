WITH paid_top_5_customers (customer_id, customer_first_name, customer_last_name, city, country, total_amount_paid) 
AS 
	(SELECT A.customer_id, 
A.first_name AS customer_first_name, 
A.last_name AS customer_last_name,
D.country, C.city, 
SUM (E.amount) AS total_amount_paid
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
WHERE city IN ('Aurora', 'Acua', 'Citrus Heights', 'Iwaki', 'Ambattur', 'Shanwei', 'Teboksary', 'Tianji', 'Cianjur', 'So Leopoldo')
GROUP BY country, city, first_name, last_name, A.customer_id
ORDER BY Total_Amount_Paid Desc
LIMIT 5) 

SELECT AVG (total_amount_paid) AS average
FROM paid_top_5_customers
